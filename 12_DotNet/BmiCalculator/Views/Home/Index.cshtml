@using BmiCalculator.Controllers
@using BmiCalculator.Models

@model BmiCalculator.Models.Bmi

<div class="row">
  <div class="col">
    <h2>BMI Calculator</h2>
    <form asp-action="Calculate" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#overview">
      <div class="form-group">
        <label for="height">Height in cm</label>
        <input asp-for="Height" class="form-control">
      </div>

      <div class="form-group">
        <label for="weight">Weight in kg</label>
        <input asp-for="Weight" class="form-control">
      </div>

			<input type="submit" class="btn btn-primary" value="Calculate your BMI" />
    </form>
  </div>
</div>

<div id="overview"></div>

@section Scripts {
  <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
}